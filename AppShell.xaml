<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Ranks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Ranks"
    xmlns:views="clr-namespace:Ranks.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Ranks">

    <ShellContent
        Shell.NavBarIsVisible="True"
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />
    <ShellContent
        Title="Tournaments"
        ContentTemplate="{DataTemplate views:Tournaments}"
        Route="Tournaments"></ShellContent>
    <ShellContent
        Title="Games"
        ContentTemplate="{DataTemplate views:Games}"
        Route="Games"></ShellContent>

</Shell>
